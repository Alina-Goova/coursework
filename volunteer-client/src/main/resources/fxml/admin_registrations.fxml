<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.volunteerclient.controller.AdminRegistrationsController"
      spacing="15" style="-fx-padding: 20;">

    <HBox spacing="15" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Поиск (Пользователь, Мероприятие)..." HBox.hgrow="ALWAYS"/>
        
        <ComboBox fx:id="statusFilterBox" promptText="Статус" prefWidth="150"/>
        
        <Button text="Найти" onAction="#filterRegistrations" styleClass="accent"/> 
        <Button text="Обновить" onAction="#loadRegistrations"/>
    </HBox>

    <HBox spacing="10">
        <Label text="ПКМ по строке для изменения статуса" style="-fx-text-fill: -color-fg-muted; -fx-font-style: italic;"/>
    </HBox>

    <TableView fx:id="registrationsTable" VBox.vgrow="ALWAYS" styleClass="bordered, striped">
        <columns>
            <TableColumn fx:id="regIdColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="regUserColumn" text="Пользователь" prefWidth="200"/>
            <TableColumn fx:id="regEventColumn" text="Мероприятие" prefWidth="250"/>
            <TableColumn fx:id="regStatusColumn" text="Статус" prefWidth="120"/>
            <TableColumn fx:id="regDateColumn" text="Дата регистрации" prefWidth="150"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

</VBox>